{
  "compilerOptions": {
    "target": "es2015",
    // <= "module": "commonjs",
    "module": "ES2015",

    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "build",
    // <= "moduleResolution": "node",
    // <= "resolveJsonModule": true

    // => added...
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "lib": ["DOM", "DOM.Iterable", "ESNext"]
  },
  "include": ["src"]
}
