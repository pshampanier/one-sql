  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "agent (debug)",
      "cargo": {
        "args": ["build", "--bin=agent", "--package=agent"],
        "filter": {
          "name": "agent",
          "kind": "bin"
        }
      },
      "args": ["--port", "8080", "--api-key", "x-dev"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "unit tests",
      "cargo": {
        "args": ["test", "--no-run", "--bin=agent", "--package=agent"],
        "filter": {
          "name": "agent",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
