    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "agent (debug)",
            "cargo": {
                "args": ["build", "--bin=agent", "--package=one-sql"],
                "filter": {
                    "name": "agent",
                    "kind": "bin"
                }
            },
            "args": ["--verbose", "start", "--port", "8080", "--api-key", "x-dev"],
            "env": {
                "ONESQL_LOG_LEVEL": "trace,axum::rejection=trace"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "unit tests",
            "cargo": {
                "args": ["test", "--no-run", "--bin=agent", "--package=one-sql"],
                "filter": {
                    "name": "agent",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
